@model EcWebApp.Models.FeriadoInfo

@{
    ViewBag.Title = "Feriados";
    ViewBag.SubTitle = "Visualização";
}

<div class="box">
    <div class="box-body">
        <div class="form">
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataFeriado, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DataFeriado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="col-md-10">
                    <span></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="col-md-6">
                    <span></span>
                </div>
            </div>
        </div> <!-- form -->
    </div><!-- box-body -->
    <div class="box-footer">
        @Html.ActionLink("Editar", "Edit", new { id = Model.IdFeriado }) |
        @Html.ActionLink("Voltar", "Index")
    </div>
</div>

